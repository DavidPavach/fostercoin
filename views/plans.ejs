  <title>Plans</title>
  <%- include("partials/_seo"); -%>
</head>
<body class="bg-blueishWhite text-xs md:text-sm xl:text-base main">
    <%- include("partials/_header", { userName: user.fullName }); -%>
    <%- include("partials/_userSidebar", { page: currentPage }); -%>

  <p class="m-4 font-bold text-lg text-lightBlack md:text-xl lg:text-2xl xl:text-3xl">Our Investment Plans</p>

  <!-- Container -->
  <div class="p-4">

    <p class="font-bold text-lightBlack text-sm md:text-base xl:text-lg">View our plans</p>
      <p class="text-darkBlue">Choose the one tailored best to your current financial need.</p>

    <!-- Cards Grid -->
    <div class="gap-10 grid grid-cols-1 sm:grid-cols-2 xl:grid-cols-3 2xl:grid-cols-4 mt-10">
        
        <!-- Starter Plan -->
        <div class="border-gray-200 bg-white shadow-md p-6 border rounded-lg w-full max-w-sm">
            <div class="flex justify-center items-start bg-blueishWhite my-4 rounded-lg size-9">
